
    .page__hd{
        border-bottom: 1px solid #eee;
    }
    .page__title {
        padding: 0 15px;
    }
    .thread-info {
        font-size: 12px;
        color: #999;
        padding: 0 15px 5px;
    }
    .thread-info navigator {
        float: right;
    }
    .forum-name {
        float: right;
    }
